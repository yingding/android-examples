<resources>

    <!-- Base application theme. Android Default Theme, with a light background and a dark actionbar -->
    <!-- style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- No AppBar Elevation for androidx AppCompat
    https://stackoverflow.com/questions/12246388/remove-shadow-below-actionbar
    https://stackoverflow.com/a/27203224
    -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/animated_button_background</item><!-- changeable background while pressed -->
        <item name="android:tint">@color/animated_button_text_color</item><!-- changeable background text color while pressed -->
    </style>

    <style name="PlusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_add_black_40dp</item>
        <item name="android:description">@string/plus_button_description</item>
    </style>

    <!-- contentDescripton attribute is for visually impaired users f.g. read out loud by talk back to provide a label -->
    <style name="MinusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_remove_black_40dp</item>
        <item name="android:description">@string/minus_button_description</item>
    </style>

    <style name="ScoreText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
    </style>

    <style name="TeamText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

</resources>
